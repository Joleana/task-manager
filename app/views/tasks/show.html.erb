<h2><%= @task.title %></h2>

<p><%= @task.details %></p>
<% if @task.completed %>
  <i class="fa fa-check-square-o"></i> This task is completed
<% else %>
  <i class="fa fa-square-o"></i> Not completed
<% end %>


<hr>
<%= link_to edit_task_path(@task.id) do %>
  <i class="fa fa-history"></i> Edit this task
<% end %>

<hr>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<hr>
<%= link_to tasks_path do %>
  <i class="fa fa-history"></i> Back to list
<% end %>
